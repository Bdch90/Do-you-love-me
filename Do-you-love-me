	<button id = 'no'onclick = 'clickNo()' style = 'position:absolute; width: 30px'>No</button>
<script type="text/javascript">
	var Yes=document.getElementById('yes');
	function clickYes(){
		alert('ahihi');
	}
	function clickNo(){
		//lấy giá trị click No
		var No = document.getElementById('no');
		//lấy những số ngẫu nhiên trong khoảng 500
		var x = (Math.random() * 500);
		//gán giá trị ngẫu nhiên vào nút bấm dưới dạng pixel
		No.style.top = x +'px';
		No.style.left = x + 'px';
	}
</script>	
